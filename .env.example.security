# Security Configuration
# Copy these to your .env.local file

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000    # 1 hour
RATE_LIMIT_MAX_REQUESTS=10      # Max requests per window
RATE_LIMIT_UPLOAD_MAX=5         # Max file uploads per window

# File Security
MAX_FILE_SIZE_MB=10             # Maximum file size in MB
MAX_INPUT_LENGTH=50000          # Maximum character length for text inputs

# Security Logging
ENABLE_SECURITY_LOGGING=true    # Enable detailed security event logging

# Content Moderation
ENABLE_CONTENT_MODERATION=true  # Enable content filtering
STRICT_MODE=false               # Strict content filtering (may have false positives)

# AI Generation Limits
AI_MAX_TOKENS=2000              # Maximum tokens per AI request
AI_TIMEOUT_SECONDS=30           # Timeout for AI requests

# Session Security
SESSION_TIMEOUT_MINUTES=60      # Session timeout
CSRF_TOKEN_LENGTH=32            # CSRF token length

# IP-based Security
BLOCK_KNOWN_VPNS=false          # Block known VPN IPs
BLOCK_TOR_EXIT_NODES=false      # Block Tor exit nodes

# Development Settings
BYPASS_SECURITY_IN_DEV=false    # NEVER set to true in production